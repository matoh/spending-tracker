{
  "name": "spending-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "db:generate-types": "kysely-codegen",
    "db:up": "npx ts-node -r dotenv/config --skip-project ./scripts/migrate.ts -- up",
    "db:down": "npx ts-node -r dotenv/config --skip-project ./scripts/migrate.ts -- down",
    "db:migrate": "npx ts-node -r dotenv/config --skip-project ./scripts/migrate.ts -- latest",
    "db:seed": "npx ts-node -r dotenv/config --skip-project ./scripts/seed.ts",
    "lint": "next lint"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.30.6",
    "kysely": "^0.27.3",
    "lucide-react": "^0.363.0",
    "next": "14.1.4",
    "next-themes": "^0.3.0",
    "pg": "^8.11.3",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pg": "^8.11.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "kysely-codegen": "^0.14.1",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "trailingComma": "none",
    "printWidth": 140,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
