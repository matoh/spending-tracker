{
  "name": "spending-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "db:generate-types": "kysely-codegen",
    "db:up": "npx ts-node -r dotenv/config -r tsconfig-paths/register --project tsconfig.scripts.json ./scripts/migrate.ts -- up",
    "db:down": "npx ts-node -r dotenv/config -r tsconfig-paths/register --project tsconfig.scripts.json ./scripts/migrate.ts -- down",
    "db:migrate": "npx ts-node -r dotenv/config -r tsconfig-paths/register --project tsconfig.scripts.json ./scripts/migrate.ts -- latest",
    "db:seed": "npx ts-node -r dotenv/config -r tsconfig-paths/register --project tsconfig.scripts.json ./scripts/seed.ts",
    "import-expenses": "npx ts-node -r dotenv/config -r tsconfig-paths/register --project tsconfig.scripts.json ./scripts/import-expenses.ts",
    "shadcn:add": "npx shadcn@latest add",
    "lint": "next lint"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "kysely": "^0.28.5",
    "lucide-react": "^0.544.0",
    "next": "15.5.9",
    "next-themes": "^0.4.6",
    "pg": "^8.11.3",
    "react": "19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.51.2",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^22",
    "@types/pg": "^8.11.4",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "kysely-codegen": "^0.19.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tailwindcss": "^4.1.13",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "trailingComma": "none",
    "printWidth": 140,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
